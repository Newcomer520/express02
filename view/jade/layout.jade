doctype html
html
	head
		link(rel="stylesheet", href="/stylesheets/main.css")
		link(rel="stylesheet", href="/vendor/bootstrap/dist/css/bootstrap.css")
		link(rel="stylesheet", href="/stylesheets/custom.css")
		//link(rel="stylesheet", href="/stylesheets/vendor.css")
		//link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")
		script(data-main="/scripts/main.js", src="/vendor/requirejs/require.js")

		block header
	body()
		.navbar.navbar-lightblue(role="navigation", ng-controller="nav-ctrl", ng-cloak)
			.container-fluid
				.navbar-header
					button.navbar-toggle(type="button", data-toggle="collapse", data-target="#nav-main")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
				#nav-main.navbar-collapse.collapse
					ul.nav.navbar-nav
						li(ng-repeat="item in items", ng-class="{active: isActive(item.sref)}")
							a(ui-sref="{{item.sref}}" ) {{item.text}}
					ul.nav.navbar-nav.navbar-right
						li 
							a
								form(action="/seach")
									input.search-box(name="searchWord", focus-me, placeholder="search..")
						li
							a(href="fb")
								.fb-like(data-href="http://localhostt:3000", data-layout="button" data-action="like" data-show-faces="false" data-share="false")
		.container-fluid
			.row
				.col-md-12.main-area(ui-view)
					
			

		#fb-root
		script.
			(function(d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s); js.id = id;
				js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.0";
				fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
